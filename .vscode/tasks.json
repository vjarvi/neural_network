{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "src/main.cpp",
                "src/utils.cpp",
                "-o",
                "program"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by C/C++ extension"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./program",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["build"]
        }
    ]
}